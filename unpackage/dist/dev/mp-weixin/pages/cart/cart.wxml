<view><block wx:if="{{userInfo.loginStatus==false||hasGoods==false}}"><view><view class="nothing"><text style="font-size:25px;color:grey;">空空如也</text><button data-event-opts="{{[['tap',[['toShopping',['$event']]]]]}}" class="nothingbutton" bindtap="__e">去逛逛</button></view></view></block><block wx:else><view><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-detail"><view class="detail-left"><view class="goods-left"><checkbox-group data-event-opts="{{[['change',[['selected',['$0'],[[['goodsList','',index]]]]]]]}}" bindchange="__e"><label><checkbox class="selected" value="{{item.price}}" color="#555555" checked="{{item.checked}}"></checkbox></label></checkbox-group><image style="width:150rpx;" src="{{item.mainimage}}" mode="widthFix"></image></view><view class="size"><text style="font-size:25rpx;">{{item.name}}</text><text style="font-size:25rpx;color:gray;">{{item.title}}</text><text class="goods-price">{{"￥"+item.price+"/件"}}</text></view></view><view class="detail-right"><text data-event-opts="{{[['tap',[['reduce',['$0'],[[['goodsList','',index]]]]]]]}}" class="subtract" bindtap="__e">-</text><text class="num">{{item.num}}</text><text data-event-opts="{{[['tap',[['add',['$0'],[[['goodsList','',index]]]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view></block><view class="end"><view class="end-left"><checkbox-group data-event-opts="{{[['change',[['selectgoods']]]]}}" bindchange="__e"><label><checkbox checked="{{allchecked}}"></checkbox>全选</label></checkbox-group><view>总计：<text style="color:#f00;font-weight:bold;">{{"￥ "+totalPrice}}</text></view></view><view class="end-right">{{'结算('+totalNum+')'}}</view></view></view>